{
  "name": "@myraui/atoms",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/components/atoms/src",
  "projectType": "library",
  "tags": ["scope:client"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "packages/components/atoms/dist"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/components/atoms/jest.config.ts"
      }
    },
    "release": {
      "executor": "nx-release:build-update-publish",
      "options": {
        "libName": "@myraui/atoms"
      }
    }
  }
}
