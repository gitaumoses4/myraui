{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["apps/docs/src/*"],
      "@/layout": ["apps/docs/src/components/mdx-layout/index.ts"],
      "@myraui/react": ["packages/core/react/src/index.ts"],
      "@myraui/fonts": ["packages/core/fonts/src/index.ts"],
      "@myraui/theme/plugin": ["packages/core/theme/src/plugin.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/docs/.next/types/**/*.ts",
    "../../dist/apps/docs/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules", "jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
